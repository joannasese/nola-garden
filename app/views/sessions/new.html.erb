<!-- <%= stylesheet_link_tag "application" %> -->
<h2>Login</h2>
<!-- can i implement error message? -->
<% if flash[:notice] %>
  <div class="error_explanation">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>


  <%= form_tag '/login' do %>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        Username:
        <%= text_field_tag :name, nil, class: "form-control" %>
      </div>
      <div class="col-md-4 col-md-offset-4">
        <p>Password:
          <%= password_field_tag :password, nil, class: "form-control" %>
        </p>
      </div>
    </div>

    <div class="row">
      <p>
        <%= submit_tag "Submit", class: "btn btn-success" %>
      </p>
    </div>
  <% end %>

<div class="row">
  <p><a href="/auth/google_oauth2">
  <img src="https://developers.google.com/accounts/images/sign-in-with-google.png" width="200px" height="auto">
</div>
