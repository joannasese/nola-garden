<%= form_tag '/login' do %>
  <div class="row">

    <div class="col-md-4 col-md-offset-4">
      <p><a href="/auth/google_oauth2">
      <img src="https://developers.google.com/accounts/images/sign-in-with-google.png" width="200px" height="auto">
      </a>
    </div>

    <div class="col-md-4 col-md-offset-4">
      or log in with your username and password.
      <p><p>
      <%= label_tag "Username" %><br>
      <%= text_field_tag :name, nil, class: "form-control" %><br>
    </div>

    <div class="col-md-4 col-md-offset-4">
      <%= label_tag :password %><br>
      <%= password_field_tag :password, nil, class: "form-control" %><br>
    </div>

    <div class="col-md-4 col-md-offset-4">
      <%= submit_tag "Submit", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
