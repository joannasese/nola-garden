<!DOCTYPE html>
<html>
  <head>
    <title>New Orleans Plant Library</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if !current_user %>
      <h1><%= link_to 'New Orleans Plant Library', '/' %></h1>
    <% else %>
      <h1><%= link_to 'New Orleans Plant Library', user_path(current_user) %></h1>
      Hello <%= current_user.name %> | <%= link_to 'Logout', '/logout' %>
    <% end %>

    <%= yield %>

  </body>
</html>
