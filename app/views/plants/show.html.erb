<div class="plant-title">
  <h3><%= @plant.variety %></h3>
</div>

<div class="row">
  <div class="col-md-3">
  </div>

  <div class="col-md-3">
    <% if @plant.image %>
      <img src="<%= "#{@plant.image}" %>" class="plant-photo">
    <% else %>
      <img src="https://static1.squarespace.com/static/54f941f0e4b083dcfa39d86d/56e0ff51c2ea5145ed706e43/56e1016937013b4b09d90b5d/1457586562633/2016_PinkGarden_forPrint.png?format=1000w" class="plant-photo">
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="plant-info">
      <p><strong>Common name: </strong>
      <%= @plant.common_name %>
      <p><strong>Latin name: </strong>
      <%= @plant.latin_name %></p>
      <p><strong>When to sow seed: </strong><br>
        <% @plant.seasons.each do |s| %>
          <%= s.season %><br>
        <% end %>

    </div>
  </div>
</div>
