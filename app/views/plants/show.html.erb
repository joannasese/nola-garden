<div class="plant-title">
  <h3><%= @plant.variety %></h3>
  <% if params[:user_id] %>
    <%= link_to "Return to plants index", user_plants_path, class: "content-link" %>
  <% else %>
    <%= link_to "Return to plants index", plants_path, class: "content-link" %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-3">
  </div>

  <div class="col-md-3">
    <% if @plant.image != nil && @plant.image != "" %>
      <img src="<%= "#{@plant.image}" %>" class="plant-photo">
    <% else %>
      <img src="https://static1.squarespace.com/static/54f941f0e4b083dcfa39d86d/56e0ff51c2ea5145ed706e43/56e1016937013b4b09d90b5d/1457586562633/2016_PinkGarden_forPrint.png?format=1000w" class="plant-photo">
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="plant-info">
      <div class="bold">Common name:</div>
      <%= @plant.common_name %>
      <p>
      <div class="bold">Latin name:</div>
      <%= @plant.latin_name %>
      <p>
      <div class="bold">Lifecycle:</div>
      <%= @plant.lifecycle %>
      <p>
      <div class="bold">Days to maturity:</div>
      <%= @plant.days_to_maturity %>
      <p>
      <div class="bold">Light requirements:</div>
      <%= @plant.light %>
      <p>
      <div class="bold">Height:</div>
      <% if @plant.height %>
        <%= @plant.height %>"
      <% end %>
      <p>
      <div class="bold">Spacing:</div>
      <% if @plant.spacing %>
        <%= @plant.spacing %>"
      <% end %>
      <p>
      <div class="bold">When to sow seed:</div>
        <% @plant.seasons.each do |s| %>
          <%= s.season %><br>
        <% end %>
      <p>
      <div class="bold">Tags:</div>
        <!-- <%= @plant.tagged %> -->
        <% if !@plant.tags.empty? %>
        <ul>
          <% @plant.tags.each do |tag| %>
            <li><%= tag.name %></li>
          <% end %>
        </ul>
        <% else %>
          No tags yet!
        <% end %>
    </div>
  </div>
</div>
