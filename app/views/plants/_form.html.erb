  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Image URL:<br>
        <%= f.text_field :image, class: "form-control" %><br>
    </div>
  </div> -->

<!-- SUBMIT -->
 <div class="row">
   <%= f.submit class: 'btn' %>
 </div>
<% end %>
