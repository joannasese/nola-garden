<!-- COMMON NAME -->
<%= form_for plant, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Common name:*<br>
      <div class="common-name">
        <%= f.text_field :common_name, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- IMAGE UPLOADER -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold image-upload">Upload image:<br></p>
      <div class="plant-photo">
        <%= f.file_field :image %><br>
      </div>
    </div>
  </div>

<!-- LATIN NAME -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Latin name:<br>
      <div class="latin-name">
        <%= f.text_field :latin_name, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- VARIETY -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Variety:*<br>
      <div class="variety">
        <%= f.text_field :variety, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- HEIGHT -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Height (inches):<br>
      <div class="height">
        <%= f.text_field :height, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- LIGHT -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Light requirements:<br>
      <div class="light">
        <%= f.select :light, options_for_select([['Select one', ''], 'Full sun', 'Part sun', 'Shade'], selected: f.object.light), {}, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- LIFE CYCLE -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Lifecycle:<br>
      <div class="lifecycle">
        <%= f.select :lifecycle, options_for_select([['Select one', ''], 'Annual', 'Perennial'], selected: f.object.lifecycle), {}, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- SPACING -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Spacing (inches):<br>
        <div class="spacing">
          <%= f.text_field :spacing, class: "form-control" %><br>
        </div>
    </div>
  </div>

<!-- SEASONS -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Sowing season:*<br>
      <div class="seasons"></div>

        <%= f.collection_check_boxes(:season_ids, Season.all, :id, :season) do |b| %>
        <div class="row season-row">
          <%= b.label(class: "check_box") do %>
            <div class="col-xs-4">
              <%= b.check_box(class: "check_box") %>
            </div>
            <div class="col-xs-6">
              <%= b.object.season %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

<p>
<!-- DAYS TO MATURITY -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <p class="bold">Days to maturity:<br>
      <div class="maturity">
        <%= f.text_field :days_to_maturity, class: "form-control" %><br>
      </div>
    </div>
  </div>

<!-- TAGS -->
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <p class="bold">Tags:<br>
      <div class="tags"></div>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
        <div class="row tag-row">
          <%= b.label(class: "check_box") do %>
            <div class="col-xs-4">
              <%= b.check_box(class: "check_box") %>
            </div>
            <div class="col-xs-6">
              <%= b.object.name %>
            </div>
          <% end %>
        </div>
      <% end %>

      <div class="tag-row"
        <p>New tag:
        <%= f.fields_for :tags, plant.tags.build do |tags_fields| %>
          <%= tags_fields.text_field :name %><br>
        <% end %>
      </div>
    </div>
  </div>

<!-- SUBMIT -->
 <div class="row submit">
   <%= f.submit class: 'btn' %>
 </div>
<% end %>
