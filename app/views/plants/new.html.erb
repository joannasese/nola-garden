<h2>Submit a Plant</h2>

<%= form_for @plant do |f| %>
  <%= f.label :common_name %>:
  <%= f.text_field :common_name %><br>
  <%= f.label :latin_name %>:
  <%= f.text_field :latin_name %><br>
  <%= f.label :variety %>:
  <%= f.text_field :variety %><br>
  <%= f.label :height %>:
  <%= f.text_field :height %><br>
  <%= f.label :light %>:
  <%= f.select :light, options_for_select([['Select one', ''], 'Full sun', 'Part sun', 'Shade']) %><br>
  <%= f.label :lifecycle %>:
  <%= f.select :lifecycle, options_for_select([['Select one', ''], 'Annual', 'Perennial']) %><br>
  <%= f.label :spacing %>:
  <%= f.text_field :spacing %><br>
  <!-- <%= f.label 'Time to sow seeds:' %>
  <%= f.collection_check_boxes :growing_season_id, GrowingSeason.all, :id, :sowing %><br> -->
  <%= fields_for :growing_season, @plant.growing_season do |gs_fields| %>
    Sowing season: <%= gs_fields.check_box :fall %>Fall <%= gs_fields.check_box :winter %>Winter
    <%= gs_fields.check_box :spring %>Spring <%= gs_fields.check_box :summer %>Summer<br>
  <% end %>
  <%= f.submit %>

<% end %>
